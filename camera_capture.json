{
	"camera": {
		"brightness": 50,
		"contrast": 0,
		"saturation": 0,
		"quality": 85,
		"resolution": [640, 480],
		"rotation": 90,
		"zoom": [0.3, 0.3, 0.5, 0.6],
		"preview": {
			"window": [1920, 960, 640, 480],
			"_comment": "camera preview at bottom-right corner for 2560x1440 resolution"
		}
	},
	"light_only_for_pictures": true,
	"annotate_config_to_pictures": false,
	"cloud": [
		{
			"src": "/home/pi/Pictures/EnergySuD",
			"dst": [
				"dropbox:EnergySuD/RaspberryPi/Pictures",
				"dox:Photos_compteur/Jean-Marie"
			]
		},
		{
			"src": "/var/log/EnergySuD",
			"dst": "dropbox:EnergySuD/RaspberryPi/logs"
		}
	],
	"scheduled_jobs":
	[
		{
			"command": "sudo find /home/pi/Pictures/EnergySuD/ -type f -mtime +3 -exec mv '{}' /home/pi/Pictures/backup \\;",
			"tag": "execute_once",
			"enabled": false
		},
		{
			"every": "day",
			"at": "23:50",
			"tag": "reboot",
			"command": "sudo reboot"
		},
		{
			"every": "minutes",
			"interval": 5,
			"enabled": false,
			"tag": "sync files with Dropbox"
		},
		{
			"every": "hour",
			"at": [":00", ":15", ":30", ":45"],
			"tag": "take {count} pictures",
			"count": 2
		},
		{
			"every": "minutes",
			"interval": 2,
			"enabled": false,
			"tag": "take {count} test pictures",
			"count": 2
		}
	]
}