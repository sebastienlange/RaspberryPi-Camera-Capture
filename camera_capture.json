{
	"camera": {
		"resolution": [640, 480],
		"rotation": 90,
		"quality": 50,
		"brightness": 50,
		"contrast": 0,
		"saturation": 0,
		"zoom": [0.0, 0.0, 1.0, 1.0],
		"light_outside_take_pictures": "off",
		"window": [1920, 960, 640, 480],
		"_comment": "camera preview at bottom-right corner for 2560x1440 resolution"
	},
	"scheduled_jobs":
	[
		{
			"command": "echo Running $(hostname) on $(hostname -I | cut -d' ' -f1) through router $(curl --silent api.ipify.org)",
			"tag": "silent execute_once",
			"enabled": false
		},
		{
			"every": "day",
			"at": "23:50",
			"tag": "reboot",
			"command": "sudo reboot"
		},
		{
			"every": "minutes",
			"interval": 5,
			"enabled": true,
			"tag": "sync files with Dropbox"
		},
		{
			"every": "hour",
			"at": [":00", ":15", ":30", ":45"],
			"tag": "take pictures"
		},
		{
			"every": "seconds",
			"interval": 10,
			"enabled": false,
			"tag": "take test pictures"
		}
	]
}